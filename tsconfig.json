{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "removeComments": true,
        "noImplicitAny": false,
        "esModuleInterop": true,
        "sourceMap": true,
        "lib" : ["ES2020", "DOM"],
        "typeRoots": ["./node_modules/@types", "./ex_modules"],
        "jsx": "react",
        "module" : "esnext",
        "moduleResolution": "Node",
        "target": "ES5",
        "strict": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@hooks/*" : ["hooks/*"],
            "@components/*" : ["components/*"],
            "@layouts/*" : ["layouts/*"],
            "@pages/*" : ["pages/*"],
            "@utils/*" : ["utils/*"],
            "@typings/*" : ["typings/*"]
        }
    }
}